<Window x:Class="PestControlAnimator.wpf.windows.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PestControlAnimator.wpf.windows"
        mc:Ignorable="d"
        Title="Create or Open Project" Height="100" Width="500"
        Background="#33333d"
        Loaded="Window_Loaded">
        
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="1" Grid.Column="1" Click="Button_Click">
            New Project
        </Button>

        <Button Grid.Column="3" Grid.Row="1" Click="Button_Click_1">
            Open Project
        </Button>
    </Grid>
</Window>

<Window x:Class="PestControlAnimator.wpf.windows.Popups.GenericLoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PestControlAnimator.wpf.windows.Popups"
        mc:Ignorable="d"
        Title="Loading..." Height="150" Width="360">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <WrapPanel Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBlock x:Name="MainLoadingText" TextWrapping="Wrap">Sample Text</TextBlock>
        </WrapPanel>

        <ProgressBar x:Name="MainProgressBar" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
        </ProgressBar>
    </Grid>
</Window>

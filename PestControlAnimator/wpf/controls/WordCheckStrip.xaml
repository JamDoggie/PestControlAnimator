<UserControl x:Class="PestControlAnimator.wpf.controls.WordCheckStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PestControlAnimator.wpf.controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="150">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <CheckBox VerticalAlignment="Center" x:Name="MainCheckbox">
            </CheckBox>

            <TextBlock FontFamily="Segoe UI" Name="MainTextName" Foreground="#BDC3C7" VerticalAlignment="Center" Margin="5">
                Sample Text
            </TextBlock>
        </StackPanel>
    </Grid>
</UserControl>

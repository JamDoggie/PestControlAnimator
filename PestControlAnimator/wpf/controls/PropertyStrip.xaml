<UserControl x:Class="PestControlAnimator.wpf.controls.PropertyStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PestControlAnimator.wpf.controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="450">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Rectangle x:Name="StripBackground" Fill="#2f2f38" Grid.ColumnSpan="2">
            
        </Rectangle>

        <TextBlock x:Name="PropertyHeader" FontFamily="Segoe UI" FontWeight="Light" Foreground="#BDC3C7">
            Sample Property
        </TextBlock>

        <TextBox x:Name="PropertyTextBox" HorizontalAlignment="Stretch" Grid.Column="1">
        </TextBox>

    </Grid>
</UserControl>
